@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-100 dark:bg-gray-900">

    <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
        <div class="px-3 py-3 lg:px-5 lg:pl-3">
            <div class="flex items-center justify-between">
                
                <div  class="flex items-center">
                    <div class="flex items-center ms-3">
                        <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                            <li>

                                <a asp-controller="Auth" asp-action="Login" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Login</a>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <aside id="logo-sidebar" class="w-64 fixed top-0 left-0 z-40 h-screen pt-20 bg-white border-r border-gray-200 dark:bg-gray-800 dark:border-gray-700" aria-label="Sidebar">
        <h3 class="mb-4 text-2xl pl-5 font-medium text-gray-900 dark:text-white">
            <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Admin Dashboard</span>
        </h3>
        <div class="h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-gray-800">
            <ul class="space-y-2 font-medium">
                <li>
                    <a asp-controller="Book" asp-action="Index" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        📚 <span class="ms-3">Manage Books</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="User" asp-action="Index" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                        👤 <span class="flex-1 ms-3 whitespace-nowrap">Manage Users</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <div class="p-4 mt-20 sm:ml-64">
        <div class="flex justify-center">
            <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 w-full max-w-6xl">
                @RenderBody() <!-- 🔥 Where your table or user content will be injected -->
            </div>
        </div>
    </div>
</body>
</html>
