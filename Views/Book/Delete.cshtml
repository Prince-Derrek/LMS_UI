@model LMS_UI.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Delete";
}
<section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h3 class="flex justify-center mb-4 text-2xl pl-5 font-medium text-gray-900 dark:text-white">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Delete Book</span>
                </h3>
                <p class=" font-normal text-gray-500 dark:text-gray-400">Are you sure you want to delete this book?</p>
                <dl class="max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
                    <div class="flex flex-col pb-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.bookId)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.bookId)
                        </dd>
                    </div>
                    <div class="flex flex-col pt-3 pd-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.bookTitle)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.bookTitle)
                        </dd>
                    </div>
                    <div class="flex flex-col pt-3 pd-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.bookAuthor)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.bookAuthor)
                        </dd>
                    </div>
                    <div class="flex flex-col pt-3 pd-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.isBorrowed)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.isBorrowed)
                        </dd>
                    </div>
                    <div class="flex flex-col pt-3 pd-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.borrowedBy)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.borrowedBy)
                        </dd>
                    </div>
                    <div class="flex flex-col pt-3 pd-3">
                        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">
                            @Html.DisplayNameFor(model => model.borrowedAt)
                        </dt>
                        <dd class="text-lg font-semibold">
                            @Html.DisplayFor(model => model.borrowedAt)
                        </dd>
                    </div>
                    <form asp-action="Delete" method="post">
                        <div class="grid gap-6 mb-6 md:grid-cols-2">
                            <div>
                                <input type="hidden" asp-for="bookId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="#" />
                                <button type="submit" value="Delete" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Delete</button>
                                <a asp-action="Index" class="text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Cancel</a>
                            </div>
                    </form>
                </dl>

            </div>
        </div>
    </div>
</section>