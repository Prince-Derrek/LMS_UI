@model IEnumerable<LMS_UI.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Manage Books";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var role = Context.Session.GetString("Role");
}

@if (role == "Admin")
{
    <a class="btn btn-success" asp-controller="Book" asp-action="Create">+ Add New Book</a>
}

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:border-red-700 dark:text-gray-50">
        <thead class="text-xs text-white uppercase bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
            <tr>
                <th scope="col" class="px-6 py-3">
                    #
                </th>
                <th scope="col" class="px-6 py-3">
                    Title
                </th>
                <th scope="col" class="px-6 py-3">
                    Author
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    Borrowed By
                </th>
                <th scope="col" class="px-6 py-3">
                    Borrowed At
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class=" text-black bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 border-b dark:border-black">
                    <td class="px-6 py-4">
                        @item.bookId
                    </td>
                    <td class="px-6 py-4">
                        @item.bookTitle
                    </td>
                    <td class="px-6 py-4">
                        @item.bookAuthor
                    </td>
                    <td class="px-6 py-4">
                        @(item.isBorrowed ? "Borrowed" : "Available")
                    </td>
                    <td class="px-6 py-4">
                        @(item.borrowedBy ?? "-")
                    </td>
                    <td class="px-6 py-4">
                        @(item.borrowedAt?.ToString("dd MMM yyyy HH:mm") ?? "-")
                    </td>
                    <td class="px-6 py-4">
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.bookId">View</a>
                    </td>
                    <td class="px-6 py-4">
                        @if (role == "Admin")
                        {

                            @Html.ActionLink("Edit", "Edit", new { id = item.bookId }) <br>
                            @Html.ActionLink("Delete", "Delete", new { id = item.bookId })

                        }
                        else if (role == "User" && item.isBorrowed == false)
                        {
                            <form method="post" asp-controller="Book" asp-action="Borrow" asp-route-id="@item.bookId">
                            <button type="submit" class="btn btn-primary btn-sm">Borrow</button>
                            </form>
                        }
                        else if (role == "User" && item.isBorrowed && item.borrowedBy == Context.Session.GetString("Username"))
                        {
                            <form method="post" asp-controller="Book" asp-action="Return" asp-route-id="@item.bookId">
                            <button type="submit" class="btn btn-warning btn-sm">Return</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>